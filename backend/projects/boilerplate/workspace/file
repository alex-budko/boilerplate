// API.js
const API = {
  getPosts: async () => {
    const response = await fetch('https://api.example.com/posts');
    const data = await response.json();
    return data;
  },
  createPost: async (post) => {
    await fetch('https://api.example.com/posts', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(post),
    });
  },
};

export default API;
